    <security-constraint>
        <display-name>editor_constraint</display-name>
        <web-resource-collection>
            <web-resource-name>editor_resources</web-resource-name>
            <url-pattern>/editor/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>memo_editor</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>sender_constraint</display-name>
        <web-resource-collection>
            <web-resource-name>sender_resources</web-resource-name>
            <url-pattern>/sender/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>memo_sender</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>appointment_constraint</display-name>
        <web-resource-collection>
            <web-resource-name>appointment_resources</web-resource-name>
            <url-pattern>/appointment/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>memo_appointment</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>system_constraint</display-name>
        <web-resource-collection>
            <web-resource-name>system_resources</web-resource-name>
            <url-pattern>/system/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>memo_system</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>user_constraint</display-name>
        <web-resource-collection>
            <web-resource-name>user_resources</web-resource-name>
            <url-pattern>/controller/*</url-pattern>
            <url-pattern>/deptBox.jsp</url-pattern>
            <url-pattern>/depts.jsp</url-pattern>
            <url-pattern>/memoView.jsp</url-pattern>
            <url-pattern>/printForm.jsp</url-pattern>
            <url-pattern>/search.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>memo_user</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>[AUTORIZATION REQUIRED!]</realm-name>
    </login-config>

    <security-role>
        <role-name>memo_editor</role-name>
    </security-role>
    <security-role>
        <role-name>memo_appointment</role-name>
    </security-role>
    <security-role>
        <role-name>memo_sender</role-name>
    </security-role>
    <security-role>
        <role-name>memo_system</role-name>
    </security-role>
    <security-role>
        <role-name>memo_user</role-name>
    </security-role>
</web-app>
<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

    <context-param>
        <param-name>upload_dir</param-name>
        <param-value>c:\temp\memos</param-value>
    </context-param>

    <context-param>
        <param-name>upload_temp_dir</param-name>
        <param-value>c:\temp\memos\tmp</param-value>
    </context-param>

    <listener>
        <listener-class>org.memorandum.webMemoListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>memoProcessing</servlet-name>
        <servlet-class>org.memorandum.controllers.memoProcessing</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>org.memorandum.controllers.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editorController</servlet-name>
        <servlet-class>org.memorandum.controllers.editorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>appointmentController</servlet-name>
        <servlet-class>org.memorandum.controllers.appointmentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>senderController</servlet-name>
        <servlet-class>org.memorandum.controllers.senderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>downloadAttach</servlet-name>
        <servlet-class>org.memorandum.controllers.downloadAttach</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>systemController</servlet-name>
        <servlet-class>org.memorandum.controllers.systemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>welcomeController</servlet-name>
        <servlet-class>org.memorandum.controllers.welcomeController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>memoProcessing</servlet-name>
        <url-pattern>/editor/memoProcessing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editorController</servlet-name>
        <url-pattern>/editor/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadAttach</servlet-name>
        <url-pattern>/downloadAttach</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>senderController</servlet-name>
        <url-pattern>/sender/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>appointmentController</servlet-name>
        <url-pattern>/appointment/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>systemController</servlet-name>
        <url-pattern>/system/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>welcomeController</servlet-name>
        <url-pattern>/welcomeController</url-pattern>
    </servlet-mapping>

